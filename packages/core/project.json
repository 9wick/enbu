{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "core",
  "projectType": "library",
  "sourceRoot": "packages/core/src",
  "tags": ["scope:core", "type:lib"],
  "targets": {
    "generate-docs": {
      "executor": "nx:run-commands",
      "dependsOn": ["generate-docs"],
      "outputs": ["{projectRoot}/schemas", "{projectRoot}/docs"],
      "options": {
        "command": "pnpm exec tsx src/generator/main.ts",
        "cwd": "packages/core"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "pnpm exec tsdown --config tsdown.config.ts",
        "cwd": "packages/core"
      },
      "configurations": {
        "watch": {
          "command": "pnpm exec tsdown --config tsdown.config.ts --watch"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec oxlint --fix --fix-suggestions . && pnpm exec eslint --cache --fix .",
        "cwd": "packages/core"
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec oxlint . && pnpm exec eslint --cache .",
          "cwd": "packages/core"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsdown --config tsdown.config.ts --watch",
        "cwd": "packages/core"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -p tsconfig.json --noEmit",
        "cwd": "packages/core"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitest run",
        "cwd": "packages/core"
      }
    }
  }
}
