{
  "name": "@example/simple",
  "version": "1.0.0",
  "description": "Simple example with static HTML hosting",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "start": "tsx server.ts",
    "dev": "tsx watch server.ts",
    "test": "start-server-and-test start http://localhost:3000/health test:e2e",
    "test:e2e": "node ../../apps/cli/dist/main.mjs .enbuflow/test.enbu.yaml",
    "test:headed": "node ../../apps/cli/dist/main.mjs --headed .enbuflow/test.enbu.yaml"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.19.2",
    "start-server-and-test": "^2.0.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "nx": {
    "implicitDependencies": [
      "cli"
    ]
  }
}
