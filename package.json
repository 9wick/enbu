{
  "name": "agent-browser-flow-monorepo",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "nx run-many --target=build",
    "prepush": "pnpm run format && pnpm run typecheck && pnpm run lint && pnpm run build && pnpm run test",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "nx run-many --target=lint",
    "lint:check": "nx run-many --target=lint --configuration=ci",
    "prune": "knip --use-tsconfig-files",
    "clean": "rm -rf ./packages/*/dist ./apps/*/dist && nx reset",
    "clean:pnpm:modules": "rm -rf ./node_modules ./packages/*/node_modules ./apps/*/node_modules",
    "typecheck": "nx run-many --target=typecheck",
    "test": "nx run-many --target=test",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@nx/js": "22.2.0",
    "@nx/workspace": "22.2.0",
    "@types/node": "^22.19.2",
    "@vitest/coverage-v8": "^3.2.4",
    "agent-browser": "^0.5.0",
    "eslint": "^9.24.0",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.30.1",
    "eslint-plugin-no-barrel-files": "^1.2.2",
    "eslint-plugin-oxlint": "^1.32.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "knip": "^5.76.1",
    "neverthrow": "^8.2.0",
    "nx": "22.2.0",
    "oxlint": "^1.32.0",
    "tsdown": "^0.17.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.29.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  }
}
