{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "cli",
  "projectType": "application",
  "sourceRoot": "apps/cli/src",
  "tags": ["scope:cli", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "pnpm exec tsdown --config tsdown.config.ts",
          "cp ../../README.md ./README.md"
        ],
        "cwd": "apps/cli",
        "parallel": false
      },
      "configurations": {
        "watch": {
          "commands": [
            "cp ../../README.md ./README.md",
            "pnpm exec tsdown --config tsdown.config.ts --watch"
          ],
          "parallel": false
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec oxlint --fix --fix-suggestions . && pnpm exec eslint --cache --fix .",
        "cwd": "apps/cli"
      },
      "configurations": {
        "ci": {
          "command": "pnpm exec oxlint . && pnpm exec eslint --cache .",
          "cwd": "apps/cli"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx --watch src/main.ts",
        "cwd": "apps/cli"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsc -p tsconfig.json --noEmit",
        "cwd": "apps/cli"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitest run",
        "cwd": "apps/cli"
      }
    }
  }
}
